.d-flex.justify-content-between.align-items-center.align-items-end.py-2.mb-4
  h1.font-weight-bold.mb-0= observer.name
  .btn-group.btn-group-sm
    - case observer.status
    - when Observer::Status::STARTED
      == link_to t('observers.status.pause'), pause_admin_observer_path(observer), method: :post, class: 'btn btn-success'
    - when Observer::Status::PAUSED
      == link_to t('observers.status.start'), start_admin_observer_path(observer), method: :post, class: 'btn btn-success'

    == link_to t('helpers.edit'), edit_admin_observer_path(observer), class: 'btn btn-primary'
    == link_to t('helpers.delete'), admin_observer_path(observer), method: :delete, data: {confirm: t('helpers.are_you_sure')}, class: 'btn btn-danger'
hr/

.card.mb-4
  h6.card-header.with-elements
    .card-header-title Statistics
    .card-header-elements.ml-auto
    label.text.m-0
      span.text-light.text-tiny.font-weight-semibold.align-middle
        | SHOW STATS
      span.switcher.switcher-sm.d-inline-block.align-middle.mr-0.ml-2
        input.switcher-input checked="" type="checkbox" /
        span.switcher-indicator
          span.switcher-yes
          span.switcher-no
  .row.no-gutters.row-bordered
