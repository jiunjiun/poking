.card.mb-2
  .card-header
    a.d-flex.justify-content-between.text-dark.collapsed aria-expanded="false" data-toggle="collapse" href="#accordion2-1"
      = t('observers.info')
      .collapse-icon
  #accordion2-1.collapse data-parent="#accordion2" style=""
    ul.list-group.list-group-flush.px-2
      li.list-group-item
